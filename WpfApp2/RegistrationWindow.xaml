        <TextBox HorizontalAlignment="Left" Height="23" Margin="130,10,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" RenderTransformOrigin="1.365,0.768" Grid.Row="1"/>
        <TextBlock Name="profile_user_telephone" HorizontalAlignment="Left" Margin="29,49,0,0" Text="Телефон" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Row="1"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="130,49,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" RenderTransformOrigin="1.365,0.768" Grid.Row="1"/>-->
        <Button Background="Gray" Content="Зарегистрироваться" HorizontalAlignment="Left" Margin="10,207,0,0" VerticalAlignment="Top" Width="120" Click="Button_Click"/>
        <Button Background="Gray" Content="Войти" HorizontalAlignment="Left" Margin="162,207,0,0" VerticalAlignment="Top" Width="120" Click="Button_Click_1" RenderTransformOrigin="0.406,5.79"/>
    </Grid>
</Window>
